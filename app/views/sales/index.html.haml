.container

%h4 Sales Entry
= simple_form_for @sale, :html => {:class => 'form-horizontal' } do |f|
  = f.input :product_code, :required => true
  = f.input :description
  = f.input :quantity
  = f.input :sold_price

  .form-actions
    = f.button :submit, 'Submit', :class=> "btn btn-primary"

.row-fluid
  .span12
    = render partial:  'grid'

